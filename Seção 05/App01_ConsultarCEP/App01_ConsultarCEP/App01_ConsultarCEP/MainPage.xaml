<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App01_ConsultarCEP"
             x:Class="App01_ConsultarCEP.MainPage">

    <StackLayout BackgroundColor="#FFBF00" 
                 Padding="30"
                 Spacing="30">
        <Image Source="LogoCorreios.png" />
        <Entry Placeholder="Digite o CEP" 
               PlaceholderColor="#FFBF00"
               BackgroundColor="#FFFFFF"
               MaxLength="8"
               x:Name="entryCEP"/>
        <Button Text="Buscar CEP"
                TextColor="#FFFFFF"
                BackgroundColor="#00416B" 
                x:Name="buttonBuscarCEP" />
        <Label Text="" 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand"
            x:Name="txtResultado" />
    </StackLayout>

</ContentPage>
